@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-5">Product Index</h1>

<a asp-action="AddProduct" class="btn btn-primary  mb-5">Add Product</a>

<table class="table table-striped table-hover">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Description
        </th>
        <th>
            Product Category
        </th>
        <th>
            Product Default Image
        </th>
    </tr>
    @foreach (var item in ViewBag.products)
    {
<tr>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td>@item.CategoryName</td>
    <td><img src="~/images/@item.DefaultImage" width="120" /></td>
</tr>
    }
</table>